<div class="container p-3 mb-2 my-4" style="background-color:#5; ">
	<h1 class="my-3 text-center p-3 mb-2  text-white h4" style="background-color:black;"><em>All Contacts</em></h1>
	<br>
	<p class="text-danger bg-light"><%= notice %></p><br>
	<%= link_to 'New Contact' , new_contact_path,class: "btn btn-warning my-3" %>

	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">First Name</th>
	      <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @contacts.each do |contact|%>	
	    <tr>
	      <td><%= contact.first_name %></td>
		  <td><%= contact.last_name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
</div>