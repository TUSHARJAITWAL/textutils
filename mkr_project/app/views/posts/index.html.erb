<div class="container p-3 mb-2 my-4" style="background-color :azure; ">
	<h1 class="my-3 text-center p-3 mb-2  text-white h4" style="background-color:black;"><em>All Posts</em></h1>
	<br>
	<p class="text-danger bg-light"><%= notice %></p><br>
	<%= link_to 'New Post' , new_post_path,class: "btn btn-warning my-3" %>

	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th scope="col">Title</th>
	      <th scope="col">Text</th>
	      <th scope="col"></th>
	      <th scope="col"></th>
	      <th scope="col"></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @posts.each do |post|%>	
	    <tr>
	      <td><%= post.title %></td>
		  <td><%= post.text %></td>
		  <td><%= link_to 'Show' , post %></td>
		  <td><%= link_to 'Edit', edit_post_path(post) %></td>
		  <td><%= link_to 'Delete',post,method: :delete, data: {
					confirm: "Are you Sure ?." } %></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
</div>